<h1 class="display-4 fw-bolder">購入明細一覧</h1>
<% @orders.each do |order| %>
  <div>
    <p>購入日: <%= order.created_at.strftime('%Y/%m/%d') %></p>
    <p>ユーザー名: <%= order.user_name %></p>
    <p>金額: <%= number_to_currency(order.billing_amount, unit: "￥", strip_insignificant_zeros: true, :format=>"%u%n") %></p>
    <%= link_to "購入明細を見る", order_path(order) %>
    <p>--------------------</p>
  </div>
<% end %>
