</nav>
<!-- Product section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6">
        <%= image_tag @item.image, class: "card-img-top mb-5 mb-md-0" %>
      </div>
      <div class="col-md-6">
        <h1 class="display-5 fw-bolder"><%= @item.name %></h1>
        <div class="fs-5 mb-5">
          <span><%= number_to_currency(@item.price, unit: "￥", strip_insignificant_zeros: true) %></span>
        </div>
        <p class="lead"><%= @item.description %></p>
        <%= form_with url: carts_path do |f| %>
          <div class="d-flex">
            <%= f.number_field :quantity, :value => 1, class: "form-control text-center me-3", min: 1, style: "max-width: 4rem" %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= button_tag type: "submit", class: "btn btn-outline-dark flex-shrink-0" do %>
              <i class="bi-cart-fill me-1"></i>
              Add to cart
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<!-- Related items section-->
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4">Related products</h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @random_items.each do |item| %>
        <div class="col mb-5">
          <div class="card h-100">
            <!-- Product image-->
            <%= link_to image_tag(item.image.variant(resize: "450x300!").processed, class: "card-img-top"), item_path(item) %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= item.name %></h5>
                <!-- Product price-->
                <%= number_to_currency(item.price, unit: "￥", strip_insignificant_zeros: true) %>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <%= form_with url: carts_path do |f| %>
                <%= f.hidden_field :quantity, :value => 1 %>
                <%= f.hidden_field :item_id, :value => item.id %>
                <div class="text-center">
                  <%= f.submit 'Add to cart', class: 'btn btn-outline-dark mt-auto' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<!-- Footer-->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p>
  </div>
</footer>
